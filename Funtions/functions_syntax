def avg():
    a = int(input("Enter the number :"))
    b = int(input("Enter the number :"))
    c = int(input("Enter the number :"))

    average = (a+b+c)/3
    print(average)
avg()  
avg()
avg()                 #   <--- This means we are calling the function and jitti baar bhi apn ko number ka avg nikalna h
                          # Utti baar apnn function ko call karenge